<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton4"
            android:layout_gravity="right|bottom"
            android:src="@drawable/fd"
            android:onClick="onimageButton4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:id="@+id/imageButton7"
            android:src="@drawable/alarm"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:id="@+id/imageButton8"
            android:src="@drawable/emergancy"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageButton10"
            android:layout_toEndOf="@+id/imageButton10" />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:id="@+id/imageButton10"
            android:src="@drawable/find"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toRightOf="@+id/imageButton7"
            android:layout_toEndOf="@+id/imageButton7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageButton7"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/imageButton4"
            android:background="#f4e9e9"
            android:id="@+id/relativeLayout"></RelativeLayout>

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:id="@+id/imageButton9"
            android:src="@drawable/battery"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageButton8"
            android:layout_toEndOf="@+id/imageButton8"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp" />

    </RelativeLayout>

</LinearLayout>
